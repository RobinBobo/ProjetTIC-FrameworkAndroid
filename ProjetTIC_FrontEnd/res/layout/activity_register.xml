<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ticfrontend.activity.LoginActivity" 
    android:orientation="horizontal">

    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:text="S'enregistrer" 
        android:textSize="25dp"
        />
        
        <TextView
            android:id="@+id/registerLoginUser"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_marginBottom="10dp"
	        android:layout_below="@+id/registerTitle"
	        android:gravity="center_vertical"
	        android:text="Identifiant : " 
	        android:textSize="16dp"
	        />

        <TextView
            android:id="@+id/registerMDP1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/registerLoginUser"
	        android:layout_marginBottom="10dp"
	        android:layout_marginRight="15dp"
	        android:gravity="center_vertical"
	        android:text="Mot de passe : " 
	        android:textSize="16dp"
	        />
        
        
         <TextView
            android:id="@+id/registerMDP2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_marginBottom="10dp"
	        android:layout_below="@+id/registerMDP1"
	        android:gravity="center_vertical"
	        android:text="Vérification MDP :" 
	        android:textSize="16dp"
	        />
        
        
        
         <TextView
            android:id="@+id/registerLastName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_marginBottom="10dp"
	        android:layout_below="@+id/registerMDP2"
	        android:gravity="center_vertical"
	        android:text="Nom : " 
	        android:textSize="16dp"
	        />
         
        <TextView
            android:id="@+id/registerFirstName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_marginBottom="10dp"
	        android:layout_below="@+id/registerLastName"
	        android:gravity="center_vertical"
	        android:text="Prénom : " 
	        android:textSize="16dp"
	        />
        
        <TextView
            android:id="@+id/registerAdresse"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_marginBottom="10dp"
	        android:layout_below="@+id/registerFirstName"
	        android:gravity="center_vertical"
	        android:text="Adresse : " 
	        android:textSize="16dp"
	        />
        
         <TextView
            android:id="@+id/registerMail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_marginBottom="25dp"
	        android:layout_below="@+id/registerAdresse"
	        android:gravity="center_vertical"
	        android:text="Adresse mail : " 
	        android:textSize="16dp"
	        />
         
         <TextView
            android:id="@+id/registerSexe"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:layout_marginBottom="30dp"
	        android:layout_below="@+id/registerMail"
	        android:gravity="center_vertical"
	        android:text="Sexe : " 
	        android:textSize="16dp"
	        />
         

        <EditText
            android:id="@+id/editTextRegId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/registerLoginUser"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editTextRegPass"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/registerMDP1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editTextRegPassVerif"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/registerMDP2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editTextRegLastname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/registerLastName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editTextRegFirstname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/registerFirstName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editTextRegAdresse"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/registerAdresse"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="16dp" />
                
                
        <EditText
            android:id="@+id/editTextRegMail"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/registerMail"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="16dp" />

	<Button
	    android:id="@+id/boutonValiderLogin"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/registerSexe"
	    android:layout_centerHorizontal="true"
	    android:gravity="center"
	    android:text="Valider l&apos;enregistrement"
	    android:textSize="16dp" />

	<RadioGroup
	    android:id="@+id/radioRegSexe"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/registerSexe"
	    android:layout_marginLeft="100dp"
	    android:checkedButton="@+id/radioHomme"
	    android:orientation="horizontal" >

	    <RadioButton
	        android:id="@+id/radioFemme"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Femme"
	        android:textSize="14dp" />

	    <RadioButton
	        android:id="@+id/radioHomme"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Homme"
	        android:textSize="14dp" />
	</RadioGroup>
    
</RelativeLayout>


