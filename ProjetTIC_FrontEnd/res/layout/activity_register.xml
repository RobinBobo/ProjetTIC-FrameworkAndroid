<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ticfrontend.activity.LoginActivity" 
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:text="S'enregistrer" 
        android:textSize="25dp"
        />

    <LinearLayout 
        android:id="@+id/layoutRegId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:gravity="center_vertical"
	        android:text="Identifiant : " 
	        android:textSize="14dp"
	        />

        <EditText
            android:id="@+id/editTextRegId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="14dp" >

            <requestFocus />
        </EditText>
    
    </LinearLayout>
    
   
     <LinearLayout 
        android:id="@+id/layoutRegPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:gravity="center_vertical"
	        android:text="Mot de passe : " 
	        android:textSize="14dp"
	        />

        <EditText
            android:id="@+id/editTextRegPass"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="14dp" >

            <requestFocus />
        </EditText>
    
    </LinearLayout>
    
     
      <LinearLayout 
        android:id="@+id/layoutRegPassVerif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:gravity="center_vertical"
	        android:text="Vérification MDP :" 
	        android:textSize="14dp"
	        />

        <EditText
            android:id="@+id/editTextRegPassVerif"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="14dp" >

            <requestFocus />
        </EditText>
    
    </LinearLayout>
    
      
       <LinearLayout 
        android:id="@+id/layoutRegLastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:gravity="center_vertical"
	        android:text="Nom : " 
	        android:textSize="14dp"
	        />

        <EditText
            android:id="@+id/editTextRegLastname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="14dp" >

            <requestFocus />
        </EditText>
    
    </LinearLayout>
      
	<LinearLayout 
        android:id="@+id/layoutRegFirstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        >
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="15dp"
	        android:gravity="center_vertical"
	        android:text="Prénom : " 
	        android:textSize="14dp"
	        />

        <EditText
            android:id="@+id/editTextRegFirstname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textAutoComplete"
            android:textSize="14dp" >

            <requestFocus />
        </EditText>
    
    </LinearLayout>
    
	<Button 
	    android:id="@+id/boutonValiderLogin"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"     
	    android:layout_gravity="center_horizontal"
	    android:gravity="center"
	    android:text="Valider l'enregistrement"
	    android:textSize="14dp"
	    />
    
</LinearLayout>


