<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activities.MainActivity" >
	
    <TextView
        android:id="@+id/titleAccueil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleAccueil" />
    
    <TextView
        android:id="@+id/titleStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/titleAccueil"
	    android:layout_marginTop="30dp"
        android:text="@string/titleStat" />
    
    <TextView
        android:id="@+id/nbProduits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/titleStat"
        android:text="@string/nbProduits" />
    
    <TextView
        android:id="@+id/nbClients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/nbProduits"
        android:text="@string/nbClients" />
    
    <TextView
        android:id="@+id/nbCde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/nbClients"
        android:text="@string/nbCde" />
    
    <TextView
        android:id="@+id/alerteStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/nbCde"
        android:text="@string/alerteStock" />
    
    <Button
		android:id="@+id/btnNomSite"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/alerteStock"
		android:gravity="center"
		android:text="@string/btnNomSite"
	    android:layout_centerHorizontal="true" />
    
	<Button
		android:id="@+id/menuLink"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/btnNomSite"
		android:gravity="center"
		android:text="@string/menuLink"
	    android:layout_centerHorizontal="true" />
	
	<Button
		android:id="@+id/btnExtract"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/menuLink"
		android:gravity="center"
		android:text="@string/btnExtract"
	    android:layout_centerHorizontal="true" />
		
</RelativeLayout>